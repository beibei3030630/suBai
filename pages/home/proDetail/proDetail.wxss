/* pages/home/proDetail/proDetail.wxss */

.proDetailContainer {
  width: 100%;
}

.mainContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.mainContainer .imgContainer {
  width: 100%;
}

.mainContainer .imgContainer image {
  width: 100%;
  height: 450rpx;
}

.mainContainer .infoContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin: 10rpx 0;
  padding: 20rpx 0;
}

.mainContainer .infoContainer text:nth-child(2) {
  font-size: 26rpx;
  color: #acacac;
}

.mainContainer .infoContainer text:nth-child(3) {
  margin-top: 20rpx;
  font-size:  30rpx;
  color: #787878;
}

.mainContainer .infoContainer text:nth-child(4) {
  margin-top: 20rpx;
  font-size: 32rpx;
  color: #ff4e2b;
}

.tabBar {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  border-top: 1px solid #ececec;
}

.tabBar .right {
  color: #fff;
  font-size: 34rpx;
  background-color: #3bc53a;
  height: 100%;
  line-height: 100rpx;
  width: 60%;
  text-align: center;
}

.tabBar .left {
  background-color: #fff;
  width: 40%;
  line-height: 100rpx;
  text-align: center;
  height: 100%;
  font-size: 34rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.tabBar .left image {
  height: 40rpx;
  width: 36rpx;
  margin-top: 5rpx;
  margin-right: 20rpx;
}
