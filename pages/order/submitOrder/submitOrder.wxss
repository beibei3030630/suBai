/* pages/order/submitOrder/submitOrder.wxss */
page{
  background-color: #F9F8FD;
}
.orderContainer{
  display: flex;
  flex-direction: column;
}
.list-wrap{
  width: 100%;
}
.list-wrap .list-item{
  background-color: #fff;
  margin-bottom: 30rpx;
}
.list-wrap .addAddress b-list view .index--detail {
  color: #aaa;
  font-size: 25rpx;
}
.list-wrap .serviePrice b-list view{
  font-size: 26rpx;
  color: #aaa;
}
.tips{
  font-size: 24rpx;
  color: #aaa;
  margin-left: 40rpx;
  margin-top: 40rpx;
}
.tabBar {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  border-top:1px solid #ececec;
}

.tabBar .right {
  color: #fff;
  font-size: 34rpx;
  background-color: #3bc53a;
  height: 100%;
  line-height: 100rpx;
  width: 40%;
  text-align: center;
}

.tabBar .left {
  background-color: #fff;
  width: 60%;
  line-height: 100rpx;
  text-align: center;
  height: 100%;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

