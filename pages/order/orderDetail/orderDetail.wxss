/* pages/order/orderDetail/orderDetail.wxss */

page {
  background-color: #f8f8fd;
}

.mainContainer {
  width: 100%;
}

.listContainer {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.listContainer .listItem {
  background-color: #fff;
  margin-bottom: 30rpx;
  padding-left: 30rpx;
}

.listContainer .listItem .statusTip{
  width: 100%;
  color: #ff5353;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.listContainer .addressItem{
  display: flex;
  flex-direction: column;
}
.listContainer .addressItem .address{
  font-size: 24rpx;
  color: #9b9b9b;
  margin: 0 0 20rpx 20rpx;
  width:85%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.listContainer .colorGray b-list view {
  color: #9b9b9b;
}

.listContainer .fontSizeSmall b-list view,
.listContainer .fontSizeSmall b-list text {
  font-size: 26rpx;
}

.btnList {
  width: 100%;
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
}

.btnList .cancel {
  border: 0 !important;
  width: 50%;
  border-radius: 0 !important;
  color: #000;
  background-color: #fff;
}

.btnList .confirmPay {
  width: 50%;
  border: 0 !important;
  border-radius: 0 !important;
  color: #fff;
  background-color: #09bb07;
}
