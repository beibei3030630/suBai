<view class="mainContainer">
  <view class="unauthroize  userInfo" wx:if="{{!authorized}}">
    <b-button open-type='getUserInfo' bind:getUserInfo="onGetUserInfo" class="clickMe">
      <image src="/images/tab.jpg" slot="img" />
    </b-button>
    <text>点击登录</text>
  </view>
