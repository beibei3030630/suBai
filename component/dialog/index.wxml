<!--component/dialog/index.wxml-->
<view class='dialog-container' hidden="{{!isShow}}">
  <view class='dialog-mask'></view>
  <view class='dialog-info'>
    <view class='dialog-title'>{{ title }}</view>
    <view class='dialog-content'>{{ content }}</view>
    <view class='dialog-footer'>
      <button class='dialog-btn' open-type="getUserInfo" bindtap='bindGetUserInfo' bindtap='confirmEvent'>{{ confirmText }}</button>
    </view>
  </view>
</view>